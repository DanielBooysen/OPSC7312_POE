<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fishingJournal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:gravity="center">

    <!-- ScrollView to make the content scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Entry"
                android:textSize="24sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_orange_light"
                android:textColor="@android:color/black" />

            <!-- Label and Dropdown for Fish Species -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fish Species"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:id="@+id/spinnerFishSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/fish_species"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Input for Length -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length (cm)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/inputLength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Length (cm)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Input for Weight -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/inputWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Input for Bait Used -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bait"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/inputBaitUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bait Used"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Dropdown for Time of Day -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time of Day"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:id="@+id/spinnerTimeOfDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/time_of_day"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Input for Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <EditText
                android:id="@+id/inputTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time (e.g., 14:30)"
                android:inputType="time"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Dropdown for Weather -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:id="@+id/spinnerWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/weather_conditions"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Label and Dropdown for Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@android:color/white"
                android:layout_marginBottom="4dp"/>
            <Spinner
                android:id="@+id/spinnerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/dam_locations"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@android:color/holo_orange_light"/>

            <!-- Button for Selecting Image -->
            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:textColor="@android:color/black"/>

            <!-- ImageView for Displaying Selected Image -->
            <ImageView
                android:id="@+id/imageViewFish"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone" /> <!-- Initially hidden -->

            <!-- Add and Cancel Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonAddEntry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/buttonCancelEntry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


