<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.opsc7312_poe">
    <!-- Permissions needed for internet access -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OPSC7312_POE"
        tools:targetApi="31">
        <activity
            android:name=".LocationSearch"
            android:exported="false" />
        <!-- The Login Activity set as Launcher (starting point of the app) -->
        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other activities -->
        <activity android:name=".Register" />
        <activity android:name=".Home" />
        <activity android:name=".Profile" />
        <activity android:name=".Settings" />
        <activity android:name=".CommunityNewsFeed" />
        <activity android:name=".SpeciesSearch" />
        <activity android:name=".FishLogging" />
        <activity android:name=".Journal" />
        <activity android:name=".LocationWeather" /> <!-- Metadata for Google Sign-In -->


        <meta-data
            android:name="com.google.android.gms.auth.api.signin.API_KEY"
            android:value="@string/default_web_client_id" />
    </application>

</manifest>